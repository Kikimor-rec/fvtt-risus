{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"lib": [
			"DOM",
			"ES2022"
		],
		"sourceMap": true,
		"sourceRoot": "src",
		"skipLibCheck": true,
		"noEmitOnError": false,
		"strict": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"dist/**",
		"node_modules"
	]
}